<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColorPrimary">@color/text_color_secondary</item>
        <item name="android:windowBackground">@color/base</item>
        <item name="android:textColorHint">@color/text_color_tertiary</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@color/dark_gray</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/status_bar</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigation_bar
        </item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
    </style>

    <style name="AppTheme.NoStatusBar" parent="@style/AppTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.GameCard" parent="android:Widget">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Widget.AttrContent" parent="android:Widget">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ColText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xsmall</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_xsmall</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ColText.time" parent="ColText">
        <item name="android:layout_width">@dimen/time_col_width</item>
        <item name="android:text">@string/time_unknown</item>
    </style>
    <style name="ColText.value" parent="ColText">
        <item name="android:layout_width">@dimen/time_col_width</item>
        <item name="android:text">@string/value_unknown</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="ColText.time.first" parent="ColText.time">
        <item name="android:layout_marginStart">@dimen/spacing_xsmall</item>
    </style>
    <style name="ColText.timer" parent="ColText">
        <item name="android:layout_width">@dimen/timer_col_width</item>
        <item name="android:text">@string/timer_init</item>
    </style>
    <style name="ColText.tag" parent="ColText">
        <item name="android:layout_width">@dimen/tag_col_width</item>
        <item name="android:layout_marginStart">@dimen/spacing_xsmall</item>
    </style>
    <style name="ColText.iconMedium" parent="ColText">
        <item name="android:layout_width">@dimen/icon_col_medium_size</item>
        <item name="android:layout_height">@dimen/icon_col_medium_size</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="ColText.iconSmall" parent="ColText">
        <item name="android:layout_width">@dimen/icon_col_small_size</item>
        <item name="android:layout_height">@dimen/icon_col_small_size</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="ColText.iconMedium.last" parent="ColText.iconMedium">
        <item name="android:layout_marginStart">@dimen/spacing_xsmall</item>
    </style>
    <style name="ColText.iconSmall.last" parent="ColText.iconSmall">
        <item name="android:layout_marginStart">@dimen/spacing_xsmall</item>
    </style>
    <style name="ColText.colorBlock" parent="ColText">
        <item name="android:layout_marginStart">@dimen/spacing_xsmall</item>
        <item name="android:layout_width">@dimen/color_col_width</item>
        <item name="android:layout_height">@dimen/color_col_height</item>
    </style>
</resources>
